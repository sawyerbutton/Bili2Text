# Bili2Text 环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# 基础配置
BILI2TEXT_DEBUG=false

# Whisper配置
BILI2TEXT_WHISPER__MODEL_NAME=medium
BILI2TEXT_WHISPER__DEVICE=cpu
BILI2TEXT_WHISPER__LANGUAGE=zh
BILI2TEXT_WHISPER__CACHE_DIR=.cache/whisper

# 下载配置
# BILI2TEXT_DOWNLOAD__PROXY_URL=http://127.0.0.1:7890
BILI2TEXT_DOWNLOAD__CONCURRENT_DOWNLOADS=3
BILI2TEXT_DOWNLOAD__TIMEOUT=300
BILI2TEXT_DOWNLOAD__RETRY_TIMES=3
BILI2TEXT_DOWNLOAD__AUDIO_QUALITY=192k

# 存储配置
BILI2TEXT_STORAGE__BASE_DIR=.
BILI2TEXT_STORAGE__AUDIO_DIR=audio
BILI2TEXT_STORAGE__VIDEO_DIR=video
BILI2TEXT_STORAGE__RESULT_DIR=result

# 日志配置
BILI2TEXT_LOGGING__LEVEL=INFO
# BILI2TEXT_LOGGING__FILE_PATH=logs/bili2text.log

# 工作流配置
BILI2TEXT_WORKFLOW__BATCH_SIZE=10
BILI2TEXT_WORKFLOW__SKIP_DOWNLOADED=true
BILI2TEXT_WORKFLOW__SKIP_TRANSCRIBED=true
BILI2TEXT_WORKFLOW__OUTPUT_FORMAT=txt